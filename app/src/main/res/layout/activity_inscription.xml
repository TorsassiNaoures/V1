<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_inscription"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.admin.v1.InscriptionActivity">
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:ems="10"
        android:hint="FirstName"
        android:id="@+id/prenom"

        android:layout_alignParentTop="true"

        android:layout_marginTop="41dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:ems="10"
        android:hint="LastName"
        android:id="@+id/nom"
        android:layout_below="@id/prenom"
        android:layout_alignStart="@id/prenom" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Email"
        android:id="@+id/email"
        android:layout_below="@id/nom"
        android:layout_alignStart="@id/nom"
        android:inputType="textWebEmailAddress" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Password"
        android:id="@+id/mp"
        android:layout_below="@id/email"
        android:layout_alignStart="@id/email"
        android:inputType="textPassword" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/cmp"
        android:hint="Confirm Password"
        android:layout_below="@id/mp"
        android:inputType="textPassword" />

    <Button
        android:text="Inscription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ins"

        android:layout_below="@id/cmp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="58dp" />

    <Button
        android:text="Lister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ins"
        android:layout_alignEnd="@+id/ins"
        android:layout_marginTop="27dp"
        android:id="@+id/button_viewAll" />


</RelativeLayout>
