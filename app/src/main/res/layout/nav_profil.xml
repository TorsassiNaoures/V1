<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="21dp"
        android:id="@+id/poidsactuel"
        android:layout_below="@+id/ancienpoids"
        android:layout_alignEnd="@+id/imageView"
        android:layout_marginEnd="19dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="107dp"
        android:id="@+id/ancienpoids"
        android:layout_below="@+id/imageView"
        android:layout_alignStart="@+id/poidsactuel" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/poidsactuel"
        android:layout_alignEnd="@+id/poidsactuel"
        android:layout_marginTop="30dp"
        android:id="@+id/poidsideal" />

    <ImageView
        android:layout_height="150dp"
        app:srcCompat="@android:drawable/ic_menu_camera"
        android:id="@+id/imageView"
        android:layout_marginStart="23dp"
        android:layout_marginTop="29dp"
        android:layout_width="150dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageView"
        android:layout_toEndOf="@+id/imageView"
        android:layout_marginStart="66dp"
        android:layout_marginBottom="55dp"
        android:id="@+id/nomcomplet" />

    <Button
        android:text="importer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView"
        android:layout_toStartOf="@+id/ancienpoids"
        android:layout_marginEnd="14dp"
        android:id="@+id/button" />

</RelativeLayout>